<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          <% if (type == 'realtime') { %>
            实时建议
          <% } %>
          <% if (type == 'operation') { %>
            操作建议
          <% } %>
          <% if (type == 'notice') { %>
            公告
          <% } %>
          <input style="float:right" type='button' onclick="getCreateMessagePage('<%= type %>')" class="btn btn-primary" value="创建新的消息" />
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                消息数据
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTable-message">
                        <thead>
                            <tr>
                                <th>标题</th>
                                <th>发布时间</th>
                                <th>修改</th>
                                <th>删除</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
             </div>
         </div>
     </div>
 </div>
